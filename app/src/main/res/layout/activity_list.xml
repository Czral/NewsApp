<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/eight_dp_padding">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/title_text"
            android:textSize="@dimen/twenty_sp_text"
            tools:text="Title" />

        <TextView
            android:id="@+id/section_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_dp_padding"
            android:paddingTop="@dimen/four_dp_padding"
            android:paddingBottom="@dimen/four_dp_padding"
            android:textColor="@color/section_text"
            android:textSize="@dimen/twelve_sp_text"
            tools:text="Section" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_dp_padding"
            android:textColor="@color/date_text"
            android:textSize="@dimen/sixteen_sp_text"
            tools:text="Date" />

        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/eight_dp_padding"
            android:textColor="@color/author_text"
            android:textSize="@dimen/fourteen_sp_text"
            tools:text="Author Name" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginTop="@dimen/eight_dp_padding"
            android:layout_marginBottom="@dimen/eight_dp_padding"
            android:background="@color/colorAccent" />

    </LinearLayout>
</layout>