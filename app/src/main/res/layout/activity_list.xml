<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/twelve_dp_padding">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/four_dp_padding"
        android:textColor="@color/title_text"
        android:textSize="@dimen/twenty_sp_text"
        tools:text="Title" />

    <TextView
        android:id="@+id/section_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/four_dp_padding"
        android:paddingTop="@dimen/four_dp_padding"
        android:textColor="@color/section_text"
        android:textSize="@dimen/twelve_sp_text"
        tools:text="Section" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/date_text"
        android:textSize="@dimen/sixteen_sp_text"
        tools:text="Date" />

    <TextView
        android:id="@+id/author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/four_dp_padding"
        android:paddingTop="@dimen/four_dp_padding"
        android:textColor="@color/author_text"
        tools:text="Author Name" />

    <RatingBar
        android:id="@+id/rating_bar"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:paddingBottom="@dimen/four_dp_padding" />

</LinearLayout>
